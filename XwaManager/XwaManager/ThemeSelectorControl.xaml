<UserControl x:Class="XwaManager.ThemeSelectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:XwaManager"
             mc:Ignorable="d"
             d:DesignHeight="100"
             d:DesignWidth="300">
    <ComboBox x:Name="themeSelector"
              Width="100"
              SelectedIndex="{Binding SelectedTheme}"
              SelectionChanged="ThemeSelector_SelectionChanged"
              ToolTip="Theme: Default/Light/Dark">
        <ComboBoxItem ToolTip="Default theme">Theme</ComboBoxItem>
        <ComboBoxItem ToolTip="Light theme">Light</ComboBoxItem>
        <ComboBoxItem ToolTip="Dark theme">Dark</ComboBoxItem>
    </ComboBox>
</UserControl>
